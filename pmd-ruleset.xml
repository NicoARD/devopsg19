<?xml version="1.0"?>
<ruleset name="DevOps G19 Custom Ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        Custom PMD ruleset for DevOps G19 project that respects repository naming conventions
    </description>

    <!-- Best Practices -->
    <rule ref="category/java/bestpractices.xml">
        <!-- Allow JUnit test classes without public modifier (package-private is fine) -->
        <exclude name="JUnit4TestShouldUseTestAnnotation"/>
        <exclude name="JUnitTestContainsTooManyAsserts"/>
        <exclude name="JUnitAssertionsShouldIncludeMessage"/>
        <exclude name="JUnitTestsShouldIncludeAssert"/>
    </rule>

    <!-- Code Style -->
    <rule ref="category/java/codestyle.xml">
        <!-- Allow long class names (e.g., TopCapitalCitiesByContinentCommand) -->
        <exclude name="LongVariable"/>
        <exclude name="ShortVariable"/>
        <exclude name="ShortClassName"/>
        <exclude name="ShortMethodName"/>
        
        <!-- Allow package-private test classes (not public) -->
        <exclude name="ClassNamingConventions"/>
        
        <!-- Allow methods without explicit access modifiers in tests -->
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="TooManyStaticImports"/>
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="MethodArgumentCouldBeFinal"/>
        <exclude name="CommentDefaultAccessModifier"/>
        <exclude name="DefaultPackage"/>
        <exclude name="CallSuperInConstructor"/>
        <exclude name="ConfusingTernary"/>
    </rule>

    <!-- Custom ClassNamingConventions to allow our naming patterns -->
    <rule ref="category/java/codestyle.xml/ClassNamingConventions">
        <properties>
            <!-- Allow Command suffix for command classes -->
            <property name="classPattern" value="[A-Z][a-zA-Z0-9]*(Command|Config|App|Registry)?"/>
            <!-- Allow Test and IT suffix for test classes -->
            <property name="abstractClassPattern" value="[A-Z][a-zA-Z0-9]*(Base)?"/>
            <property name="interfacePattern" value="I[A-Z][a-zA-Z0-9]*"/>
            <property name="enumPattern" value="[A-Z][a-zA-Z0-9]*"/>
            <property name="annotationPattern" value="[A-Z][a-zA-Z0-9]*"/>
            <property name="utilityClassPattern" value="[A-Z][a-zA-Z0-9]+(Utils?|Helper|Constants?)"/>
        </properties>
    </rule>

    <!-- Custom MethodNamingConventions to allow test method names -->
    <rule ref="category/java/codestyle.xml/MethodNamingConventions">
        <properties>
            <!-- Allow underscore in test method names (e.g., test_execute_withValidInput) -->
            <property name="methodPattern" value="[a-z][a-zA-Z0-9]*"/>
            <property name="staticPattern" value="[a-z][a-zA-Z0-9]*"/>
            <property name="nativePattern" value="[a-z][a-zA-Z0-9]*"/>
            <!-- JUnit test methods can have longer descriptive names -->
            <property name="junit3TestPattern" value="test[A-Z0-9][a-zA-Z0-9]*"/>
            <property name="junit4TestPattern" value="[a-z][a-zA-Z0-9]*"/>
            <property name="junit5TestPattern" value="[a-z][a-zA-Z0-9_]*"/>
        </properties>
    </rule>

    <!-- Design Rules -->
    <rule ref="category/java/design.xml">
        <!-- Allow many methods in command and test classes -->
        <exclude name="TooManyMethods"/>
        <exclude name="LawOfDemeter"/>
        <exclude name="LoosePackageCoupling"/>
        <exclude name="DataClass"/>
        <exclude name="UseUtilityClass"/>
    </rule>

    <!-- Allow cyclomatic complexity in test setup methods -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="methodReportLevel" value="15"/>
        </properties>
    </rule>

    <!-- Allow cognitive complexity in integration tests -->
    <rule ref="category/java/design.xml/CognitiveComplexity">
        <properties>
            <property name="reportLevel" value="20"/>
        </properties>
    </rule>

    <!-- Documentation -->
    <rule ref="category/java/documentation.xml">
        <!-- Don't require comments for everything -->
        <exclude name="CommentRequired"/>
        <exclude name="CommentSize"/>
    </rule>

    <!-- Error Prone -->
    <rule ref="category/java/errorprone.xml">
        <!-- Allow empty catch blocks with comments explaining why -->
        <exclude name="EmptyCatchBlock"/>
        <!-- Allow null assignments -->
        <exclude name="NullAssignment"/>
        <!-- Allow bean member naming in DTOs -->
        <exclude name="BeanMembersShouldSerialize"/>
        <exclude name="DataflowAnomalyAnalysis"/>
        <exclude name="AvoidLiteralsInIfCondition"/>
        <!-- Allow System.out and System.err for console output -->
        <exclude name="SystemPrintln"/>
    </rule>

    <!-- Multithreading -->
    <rule ref="category/java/multithreading.xml">
        <!-- HikariCP handles connection pooling -->
        <exclude name="UseConcurrentHashMap"/>
    </rule>

    <!-- Performance -->
    <rule ref="category/java/performance.xml">
        <!-- Allow string concatenation in simple cases -->
        <exclude name="AvoidInstantiatingObjectsInLoops"/>
    </rule>

    <!-- Security -->
    <rule ref="category/java/security.xml"/>

</ruleset>
